{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabledManagers: [
    'bundler',
    'gitlabci',
    'pre-commit',
  ],
  extends: [
    'github>saltstack-formulas/.github',
    ':enablePreCommit',
  ],
  schedule: [
    '* 0-5 * * 2',        // Tuesdays before 6AM only
  ],
  packageRules: [
    {
      groupName: 'GitLab CI Docker non-major images',
      matchManagers: [
        'gitlabci',
      ],
      matchUpdateTypes: [
        'digest',
        'minor',
        'patch',
      ],
    },
    {
      groupName: 'pre-commit non-major hooks',
      matchManagers: [
        'pre-commit',
      ],
      matchUpdateTypes: [
        'minor',
        'patch'
      ],
    },
  ],
}
