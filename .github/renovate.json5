{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabledManagers: [
    'gitlabci',
  ],
  extends: [
    'config:best-practices',
  ],
  automergeStrategy: 'merge-commit',
  dependencyDashboardTitle: 'Renovate Dashboard',
  schedule: [
    '* * * * 2',        // Tuesdays only
  ],
  packageRules: [
    {
      groupName: 'GitLab CI Docker non-major images',
      matchManagers: [
        'gitlabci',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
    },
  ],
}
